{
  "name": "Drone",
  "description": "A fast discord, easy to use discord bot.",
  "author": "EthanDevelops#5366 (@EthanDevelops)",
  "version": "dev",
  "main": "dist/index.js",
  "scripts": {
    "test": "yarn run lint && yarn run build",
    "build": "yarn rimraf dist/ && yarn tsc",
    "lint": "yarn eslint --ext js,jsx,ts,tsx src",
    "start": "yarn build && node --trace-warnings -r source-map-support/register dist/index.js",
    "format": "yarn prettier . --write",
    "format:check": "yarn prettier . --check",
    "upgrade": "yarn rimraf yarn.lock && yarn cache clean && yarn install && yarn up && yarn up -R && yarn set version latest",
    "upgrade:sdk": "yarn dlx @yarnpkg/sdks vscode"
  },
  "packageManager": "yarn@3.1.0",
  "dependencies": {
    "@discordjs/voice": "^0.7.5",
    "@sapphire/decorators": "^3.1.4",
    "@sapphire/discord.js-utilities": "^4.1.1",
    "@sapphire/framework": "^2.1.4",
    "@sapphire/pieces": "^3.1.1",
    "@sapphire/plugin-logger": "^2.0.2",
    "@sentry/node": "^6.15.0",
    "@sentry/tracing": "^6.15.0",
    "@types/node": "^16.11.7",
    "discord.js": "^13.3.1",
    "got": "^11.8.2",
    "nanoid": "^3.1.30",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.9.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.177",
    "@types/node": "^16.11.9",
    "@types/node-os-utils": "^1.2.0",
    "@types/numeral": "^2.0.2",
    "@types/tinycolor2": "^1.4.3",
    "@types/validator": "^13.7.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "discord-api-types": "0.24.0",
    "eslint": "^8.2.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.20",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4",
    "validator": "^13.7.0"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 4,
    "useTabs": true,
    "semi": false,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always",
    "embeddedLanguageFormatting": "auto"
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "ignorePatterns": [
      "dist"
    ],
    "rules": {
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/ban-ts-comment": "off"
    }
  }
}
